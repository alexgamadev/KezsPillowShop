@model IEnumerable<KezsPillowShop.Models.Pillow>
<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Kez's Pillow Shop</title>
</head>
<body>
    @foreach (var pillow in Model)
    {
        <div>
            <h2>@pillow.Name</h2>
            <h3>@pillow.Price.ToString("c")</h3>
            <h4>@pillow.Category.CategoryName</h4>
        </div>
    }
</body>
</html>